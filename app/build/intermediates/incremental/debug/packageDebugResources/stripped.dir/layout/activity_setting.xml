<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6DEF8"
    android:foregroundTint="@color/white"
    tools:context=".ActivitySetting">


    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        app:srcCompat="@drawable/arrow" />

    <LinearLayout
        android:id="@+id/picLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"

            app:srcCompat="@drawable/useravatarsmall"
            />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-30dp"
            app:srcCompat="@drawable/plus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/user"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="User Name :"
                android:textColor="#090909"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/UserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Enter User Name"
                android:inputType="textPersonName"
                android:padding="6dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp">


            <TextView
                android:id="@+id/About"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="About :"
                android:textColor="#050505"
                android:textColorHint="#131313"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/Aboutuser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Enter User Name"
                android:inputType="textPersonName"
                android:padding="6dp" />

        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/save_button_bg"
            android:backgroundTint="#0C0C0C"
            android:text="save"
            android:textColor="#F8F5F5"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/picLayout"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:background="@drawable/setting_bg"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="Privacy Plicy"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:drawableTint="@color/white" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:drawableLeft="@drawable/about"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:drawableTint="@color/white" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:drawableLeft="@drawable/bell"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="Notification"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:drawableTint="@color/white" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:drawableLeft="@drawable/invite"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="Refer a Friend"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:drawableTint="@color/white" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:drawableLeft="@drawable/question"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="Help"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:drawableTint="@color/white" />
    </LinearLayout>
</RelativeLayout>